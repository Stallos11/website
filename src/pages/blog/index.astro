---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: "Future blog posts will appear here",
    slug: "future-blog-posts",
    publishDate: "2025-03-08", // YYY-MM-JJ
    description: "Blog posts will appear in the future, covering any development feature or subject relative to software development, business structures or SaaS marketing."
  },
];
---

<Layout title="Blog - VLeveque">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
    <div class="space-y-8">
      {posts.map(post => (
        <article class="bg-gray-900 rounded-lg p-6 border border-gray-800">
          <h2 class="text-2xl font-bold mb-2">
            <a href={`/blog/${post.slug}`} class="hover:text-blue-400 transition-colors">
              {post.title}
            </a>
          </h2>
          <time class="text-gray-400 text-sm mb-3 block">{post.publishDate}</time>
          <p class="text-gray-300">{post.description}</p>
        </article>
      ))}
    </div>
  </div>
</Layout>